#!/usr/bin/env bash


date=`date +%F`
echo "
    SELECT
        account.email_address
    FROM
        registration,
        person,
        account
    WHERE
        account.id = person.account_id
        AND
        registration.person_id = person.id
        AND
        account.activated = 't'
        AND
        announcesignup = 't'
 "  | psql -t > ~/lists/announce.$date

echo "
    SELECT
        account.email_address
    FROM
        registration,
        person,
        account
    WHERE
        account.id = person.account_id
        AND
        registration.person_id = person.id
        AND
        account.activated = 't'
        AND
        delegatesignup = 't'
" | psql -t > ~/lists/delegate.$date

echo "
    SELECT
        account.email_address
    FROM
        registration,
        person,
        account
    WHERE
        account.id = person.account_id
        AND
        registration.person_id = person.id
        AND
        account.activated = 't'
        AND
        lasignup = 't'
" | psql -t > ~/lists/lasignup.$date
